# Server configuration
NODE_ENV=development
PORT=3000

# Database (PostgreSQL + Prisma)
DATABASE_URL=postgresql://<username>:<password>@<host>:<port>/<dbname>?schema=public

# JWT configuration
JWT_SECRET=your-jwt-secret-key-here # Secret for signing JWTs (required)
JWT_EXPIRES_IN=7d # JWT expiration (7 days for production use)
JWT_REFRESH_SECRET=your-refresh-secret-key # (legacy - not used with cookie auth)
JWT_REFRESH_EXPIRES_IN=7d # (legacy - not used with cookie auth)

# Cookie configuration
COOKIE_DOMAIN= # Optional: .example.com for cross-subdomain cookies

# Cloudinary credentials
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloud_api_key
CLOUDINARY_API_SECRET=your_cloud_api_secret

# Default tenant and admin (for seeding)
DEFAULT_TENANT_NAME=Demo Tenant
DEFAULT_TENANT_DOMAIN=demo.example.com
DEFAULT_TENANT_DEFAULT_LANGUAGE=tr
DEFAULT_TENANT_ADMIN_EMAIL=admin@demo.com
DEFAULT_TENANT_ADMIN_PASSWORD=ChangeMe123!
DEFAULT_SUPER_ADMIN_EMAIL=superadmin@cms.com
DEFAULT_SUPER_ADMIN_PASSWORD=SuperSecret123!